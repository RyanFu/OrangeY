<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/fend_layout"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_fend"
                android:text="朋友圈"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/iv_fend"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_fend"
                android:src="@drawable/share_fend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/wx_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_wx"
                android:layout_centerHorizontal="true"
                android:src="@drawable/share_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_wx"
                android:text="微信好友"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/iv_wx"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/zone_layout"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_zone"
                android:layout_centerHorizontal="true"
                android:src="@drawable/share_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_zone"
                android:text="qq空间"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/iv_zone"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/qq_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_qq"
                android:layout_centerHorizontal="true"
                android:src="@drawable/share_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_qq"
                android:text="qq"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/iv_qq"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:id="@+id/weibo_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_weibo"
                android:layout_centerHorizontal="true"
                android:src="@drawable/share_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_weibo"
                android:text="微博"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/iv_weibo"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:text="取消分享"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:background="@color/white"
        android:id="@+id/btn_share_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>